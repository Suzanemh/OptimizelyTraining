@model SUZTraining.Models.Pages.ContactPage

@if (Model != null)

{
    <h1>@Model.ContactHeading</h1>

    <div>
        @Html.Raw(Model.ContactInformation?.ToHtmlString() ?? string.Empty)
    </div>

    <div>
        @Html.Raw(Model.ContactForm?.ToHtmlString() ?? string.Empty)
    </div>

    @if (Model.ColoredTextBlock != null && Model.ColoredTextBlock.Items.Any())

    {
        <div>
            @Html.PropertyFor(m => m.ColoredTextBlock)
        </div>
    }
}

else

{
    <p>Contact page data is not available.</p>
}


